a=int(input())
i=2*a-1 #i=9,7,5 ...
#j=0,1,2,3,4,5
#i=9
j=0
#
while True:
    if i<=0:
        break
    else:
        
        print(' '*j,'*'*i,sep='')
        i-=2
        j+=1
i=3
j=((2*a-1)-i)//2 #j=3,j=2
while True:
    if j<0:
        break
    else:
        print(' '*j,'*'*i,sep="")
        i+=2
        j-=1
